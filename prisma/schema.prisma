model Product {
  id                   String    @id @default(cuid())
  description          String
  technicalDescription String
  ute                  String
  classification       String
  partNumber           String
  sapCode              String
  projectNumber        String
  amount               Int
  productionGroupId    String?
  machines             Machine[]

  ProductionGroup  ProductionGroup?   @relation(fields: [productionGroupId], references: [id])
  ProductionRecord ProductionRecord[]
}

model Machine {
  id                String    @id @default(cuid())
  slug              String
  ute               String
  capacity          Int
  productionGroupId String?
  products          Product[]

  ProductionGroup ProductionGroup? @relation(fields: [productionGroupId], references: [id])
}

model ProductionGroup {
  id             String           @id @default(cuid())
  name           String
  products       Product[]
  machines       Machine[]
  plannings      Planning[]
  planningReport PlanningReport[]
}

model PlanningReport {
  id           String @id @default(cuid())
  index        Int
  weeklyDemand Int
  dailyDemand  Int
  initialStock Float
  currentStock Float
  coverage     Float
  minLot       Float

  productionGroupId String
  planningId        String?
  Planning          Planning?       @relation(fields: [planningId], references: [id])
  productionGroup   ProductionGroup @relation(fields: [productionGroupId], references: [id])
}

model Planning {
  id               String            @id @default(cuid())
  startsAt         DateTime
  endsAt           DateTime
  lowRunner        Int
  HighRunner       Int
  productiveDays   Int
  productionGroups ProductionGroup[]
  planningReport   PlanningReport[]
}

model SystemPermission {
  id          String @id @default(cuid())
  description String
  users       User[]
}

model User {
  id               String             @id @default(cuid())
  name             String
  password         String
  email            String
  permissions      SystemPermission[]
  ProductionRecord ProductionRecord[]
}

model ProductionRecord {
  id        String   @id
  userId    String
  productId String
  date      DateTime @default(now())
  amount    Int

  product Product @relation(fields: [productId], references: [id])
  user    User    @relation(fields: [userId], references: [id])
}
